<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.visualization.cs427.visualization">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".view.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".view.OpenExistingActivity"
            android:configChanges="orientation|keyboardHidden"
            android:screenOrientation="sensorLandscape" />
        <activity
            android:name=".view.SprintDetailActivity"
            android:screenOrientation="landscape" />
        <activity
            android:name=".view.CreateIssueActivity"
            android:screenOrientation="landscape" />
        <activity
            android:name=".view.AddNewEpic"
            android:screenOrientation="landscape"></activity>
        <activity android:name=".view.IssueDetail"
            android:screenOrientation="landscape"></activity>
    </application>

</manifest>