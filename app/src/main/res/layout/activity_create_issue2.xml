<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.visualization.cs427.visualization.view.CreateIssueActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_marginLeft="240dp"
            android:layout_height="wrap_content"
            android:textSize="30dp"
            android:visibility="invisible"
            android:background="@drawable/grey_tag"
            android:id="@+id/txtNumIssues2"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30dp"
            android:text="Create Issue"
            android:gravity="center"
            android:textColor="#0091ff" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Issue Type"/>
        <TextView
            android:layout_width="0dp"
            android:layout_marginLeft="80dp"
            android:layout_height="wrap_content"

            android:visibility="invisible"
            android:background="@drawable/grey_tag"
            android:id="@+id/txtNumIssues"/>
        <Spinner
            android:id="@+id/spinnerIssueType"
            android:layout_width="match_parent"
            android:layout_height="37dp"
            android:background="@android:drawable/btn_dropdown"
            android:spinnerMode="dropdown" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Summary"/>
        <TextView
            android:layout_width="0dp"
            android:layout_marginLeft="80dp"
            android:layout_height="wrap_content"

            android:visibility="invisible"
            android:background="@drawable/grey_tag"
            android:id="@+id/txtNumIssues3"/>
        <EditText
            android:id="@+id/editTextSummary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Type here ..."

            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Story Points"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="63dp"
            android:visibility="invisible"
            android:background="@drawable/grey_tag"
            />
        <EditText
            android:id="@+id/editTextStoryPoints"
            android:inputType="number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Numbers only ..."
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Assignee"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="90dp"
            android:visibility="invisible"
            android:background="@drawable/grey_tag"/>
        <Spinner
            android:id="@+id/spinnerAssignee"
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:background="@android:drawable/btn_dropdown"
            android:spinnerMode="dropdown" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:orientation="horizontal"
        android:weightSum="1">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Epic"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="120dp"
            android:visibility="invisible"
            android:background="@drawable/grey_tag"/>
        <Spinner
            android:id="@+id/spinnerEpic"
            android:layout_width="200dp"
            android:layout_height="37dp"
            android:background="@android:drawable/btn_dropdown"
            android:spinnerMode="dropdown" />
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:visibility="invisible"
            android:background="@drawable/grey_tag"/>

        <ImageView
            android:layout_width="39dp"
            android:layout_height="39dp"
            android:id="@+id/ImageAddEpic"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            android:src="@drawable/plus"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:visibility="invisible"
            android:background="@drawable/grey_tag"/>
        <TextView
            android:id="@+id/TextViewAddEpic"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:text="Add epic"
            android:onClick="AddEpic"
            android:layout_marginTop="6dp"
            android:textColor="#0091ff"
            android:layout_weight="0.14" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Linked Issues"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="60dp"
            android:visibility="invisible"
            android:background="@drawable/grey_tag"/>
        <Spinner
            android:id="@+id/spinnerLinkedIssues"
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:background="@android:drawable/btn_dropdown"
            android:spinnerMode="dropdown" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Issue"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="112dp"
            android:visibility="invisible"
            android:background="@drawable/grey_tag"/>
        <Spinner
            android:id="@+id/spinnerIssue"
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:background="@android:drawable/btn_dropdown"
            android:spinnerMode="dropdown" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Description"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="80dp"
            android:visibility="invisible"
            android:background="@drawable/grey_tag" />

        <EditText
            android:id="@+id/editTextDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Type here ..."

            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="350dp"
            android:visibility="invisible"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/Create"
            android:layout_marginLeft="0dp"
            android:text="Create"
            android:onClick="Create"
            android:textColor="#0091ff"
            android:background="@drawable/border_button"/>
        />
        <Button
            android:layout_width="wrap_content"
            android:text="Cancle"
            android:id="@+id/Cancle"
            android:onClick="Cancle"
            android:layout_height="wrap_content"
            android:textColor="#0091ff"
            android:layout_marginLeft="5dp"
            android:background="@drawable/border_button"/>
        />





    </LinearLayout>

</LinearLayout>
</ScrollView>