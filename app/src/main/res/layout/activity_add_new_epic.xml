<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.visualization.cs427.visualization.view.AddNewEpic">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="Add new epic"
            android:textSize="30dp"
            android:textColor="#0091ff"
            />
    </LinearLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Epic Name"
            android:textSize="@dimen/text_size_normal"/>

        <TextView
            android:layout_width="0dp"
            android:layout_marginLeft="70dp"
            android:layout_height="wrap_content"
            android:visibility="invisible"
            android:background="@drawable/grey_tag"
            />
        />

        <EditText
            android:id="@+id/editTextEpicName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

        </EditText>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textSize="@dimen/text_size_normal"
            android:text="Epic Color"/>
        <TextView
            android:layout_width="0dp"
            android:layout_marginLeft="70dp"
            android:layout_height="wrap_content"
            android:visibility="invisible"
            android:background="@drawable/grey_tag"
            />
        <LinearLayout
            android:id="@+id/square_1"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/squares">
        </LinearLayout>
        <TextView
            android:layout_width="0dp"
            android:layout_marginLeft="10dp"
            android:layout_height="wrap_content"
            android:visibility="invisible"
            android:background="@drawable/grey_tag"
            />
        <LinearLayout
            android:id="@+id/square_2"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/square_2"></LinearLayout>
        <TextView
            android:layout_width="0dp"
            android:layout_marginLeft="10dp"
            android:layout_height="wrap_content"
            android:visibility="invisible"
            android:background="@drawable/grey_tag"
            />
        <LinearLayout
            android:id="@+id/square_3"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/square_3"/>
        <TextView
            android:layout_width="0dp"
            android:layout_marginLeft="10dp"
            android:layout_height="wrap_content"
            android:visibility="invisible"
            android:background="@drawable/grey_tag"
            />
        <LinearLayout
            android:id="@+id/square_4"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/square_4"/>
        <TextView
            android:layout_width="0dp"
            android:layout_marginLeft="10dp"
            android:layout_height="wrap_content"
            android:visibility="invisible"
            android:background="@drawable/grey_tag"
            />
        <LinearLayout
            android:id="@+id/square_5"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/square_5"/>
        <TextView
            android:layout_width="0dp"
            android:layout_marginLeft="10dp"
            android:layout_height="wrap_content"
            android:visibility="invisible"
            android:background="@drawable/grey_tag"
            />
        <LinearLayout
            android:id="@+id/square_6"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/square_6"/>
        <TextView
            android:layout_width="0dp"
            android:layout_marginLeft="10dp"
            android:layout_height="wrap_content"
            android:visibility="invisible"
            android:background="@drawable/grey_tag"
            />
        <LinearLayout
            android:id="@+id/square_7"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/square_7"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="match_parent"
        android:layout_marginTop="50dp"
        android:gravity="right|end|bottom">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/Add"
            android:text="Add"
            android:onClick="Add"
            android:textColor="@color/white"
            android:background="@color/colorPrimary"/>
        />
        <Button
            android:layout_width="wrap_content"
            android:text="Cancle"
            android:id="@+id/Cancle"
            android:onClick="Cancle"
            android:layout_height="wrap_content"
            android:textColor="#0091ff"
            android:layout_marginLeft="5dp"
            android:background="@drawable/border_button"/>
        />
    </LinearLayout>

    </LinearLayout>
